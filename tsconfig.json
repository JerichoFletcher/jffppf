{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "rootDirs": [
      "src",
      "tests"
    ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
